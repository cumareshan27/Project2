<link rel="stylesheet" href="/styles/register.css" media="screen" title="no title" charset="utf-8">

<div class="container">
  <h1 class="text-center" id="pageTitle">{{msg}}</h1>
  <h4 class="text-center" id="pageInstr">Please build your general profile to see your views in relation to peers and neighbors.</h4>
  <div class="row">
    <div class="col-md-10 offset-1">

{{!-- Get the user's alias --}}
      <div class="col-md-5 mb-3 mt-5">
        <label for="username">Your Alias</label>
        <div class="input-group">
          <input type="text" class="form-control" id="username" placeholder="Alias" required>
          <div class="invalid-feedback" style="width: 100%;">
            An alias is required.
          </div>
        </div>
      </div>
      <hr class="mb-4">

{{!-- Get the gender --}}
      <div class="d-block my-3">
        <div class="custom-control custom-radio">
          <input id="genderM" name="gender" type="radio" value="male" class="custom-control-input" required>
          <label class="custom-control-label" for="genderM">Male</label>
        </div>
        <div class="custom-control custom-radio">
          <input id="genderF" name="gender" type="radio" value="female" class="custom-control-input" required>
          <label class="custom-control-label" for="genderF">Female</label>
        </div>
      </div>
      <hr class="mb-4">

{{!-- Get the birth year --}}
      <div class="col-md-3 mb-3">
        <label for="birthYear">Birth Year</label>
        <input type="text" class="form-control" id="birthYear" placeholder="Birth Year" required>
        <div class="invalid-feedback">
          Birth year value is required
        </div>
      </div>
      <hr class="mb-4">

{{!-- Get the residing zip code --}}
      <div class="col-md-3 mb-3">
        <label for="zip">Zip</label>
        <input type="text" class="form-control" id="zip" placeholder="Zip Code" required>
        <div class="invalid-feedback">
          Zip code required.
        </div>
      </div>
      <hr class="mb-4">

{{!-- Get demographic data --}}
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" name="demographic" id="qual1">
        <label class="custom-control-label" for="qual1">Sample demographic opt-in #1</label>
      </div>
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" name="demographic" id="qual2">
        <label class="custom-control-label" for="qual2">Sample demographic opt-in #2</label>
      </div>
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" name="demographic" id="qual3">
        <label class="custom-control-label" for="qual3">Sample demographic opt-in #3</label>
      </div>
      <hr class="mb-4">

{{!-- Give the user a button to continue --}}
      <div class="text-center">
        <button class="btn btn-primary btn-lg text-center mb-3" id="continueBtn" type="submit">Continue</button>
      </div>
      </form>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/register.js"></script>